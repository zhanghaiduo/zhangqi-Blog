<% include header %>

    <main class="col-md-12 column">
        <div class="row clearfix col-md-9 column" style="padding:20px;border-right:1px solid  #C8A55F;">
            <h2>
                <% posts.forEach(function (post, index) { %>
                    <a style="color:black;" href="/u/<%= post.name %>/<%= post.time.minute %>/<%= post.title %>">
                        <%= post.title %>
                    </a>
            </h2>
            <h4>
                </li>

                <p class="info">
                    <span style="color:rgba(0, 0, 0, 0.3);font-size:14px;"> 作者：</span>
                    <a href="/u/<%= post.name %>">
                        <%= post.name %>
                    </a><span style="color:rgba(0, 0, 0, 0.3);font-size:14px;">&#x3000; 日期：
                    <%= post.time.minute %>&#x3000; 标签：</span>
                    <% post.tags.forEach(function (tag, index) { %>
                        <% if (tag) { %>
                            <a style="color:orange;" class="tag" href="/tags/<%= tag %>">
                                <%= tag %>&#x3000;
                            </a>
                            <% } %>
                                <% }) %>
                </p>
                <p>
                    <div style="color:rgba(0, 0, 0, 0.3);font-size:14px;">
                        <%- post.post %>
                    </div>
                </p>
                <p class="info" style="color:rgba(0, 0, 0, 0.3);font-size:14px;">阅读：
                    <%= post.pv %> | 评论：
                        <%= post.comments.length %>
                </p>

                <hr>
                <% }) %>

                    <%- include paging %>
            </h4>
        </div>

        <div class="pull-right col-md-3" style="right:20px;">
            <img style="width:300px;height:300px;" src="/images/laoshi.png" alt="">
        </div>

        <br><br><br>
    </main>
    </div>

    <% include footer %>